<% include ../../partials/userheader %>
<title>Concert </title>
</head>
<% include ../../partials/usernav %>


<body class="container">
            <!--body part1-->
        <div class="container my-5" >
            <div class="row">
                <div class="col-0" style="width: 25px"></div>
                    <div class="col">
                        <h1 class="dispaly-1" style="float: left">Concert
                        <img src="https://image.flaticon.com/icons/svg/1776/1776689.svg" style="float:right; width: 50px;"></h1>
                        <i class="fas fa-music fa-2x" style="margin-top: 10px; margin-left: 5px;"></i>
                    </div>
                </div>
            <hr>
            <div class="row">
                    <% var concertID = []; %>
                    <% concert.forEach(function(item){ %>
                        <% if(!concertID.includes(item.Concert_ID)) { %>
                            <% concertID.push(item.Concert_ID); %>
                
                <div class="col-3">
                    <div _ngcontent-c6
                    class="col-12 card align-items-center align-items-lg-stretch cardwrapper ng-star-inserted" 
                    style="margin-left: 45px;margin-right: 40px; margin-top: 20px; margin:40px"   > 
                        <div class="card-box card-box-by-event">         
                            <img class="card-img-top img-fluid"
                            src="<%= item.Concert_Poster %>" style="margin-top: 15px">
                                <div _ngcontent-c6="" class="row cardfooter">
                                        <div _ngcontent-c6="" class="col-12 text-center px-1 ng-star-inserted">
                                                <div _ngcontent-c6="" class="splitWrapper eventName">
                                                    <div _ngcontent-c6="" class="my-1 text-overflow modifileconcertnamecard text-center lead" style="font-weight: bold"><strong><%= item.Concert_Name %></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="col-12 p-1 text-center ng-star-inserted">
                                            <div class="splitWrapper eventDate is-size-6">
                                                <div class="text-dark text-overflow modifileconcertdatecard text-left ml-3" ><i class="fas fa-calendar-check mr-2"></i><%= item.Concert_ShowDate %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 p-1 text-center ng-star-inserted">
                                                <div class="splitWrapper eventDate is-size-6">
                                                    <div class="text-dark text-overflow modifileconcertdatecard text-left ml-3" ><i class="fas fa-map-marker-alt mr-2"></i><%= item.Venue_Name %>
                                                        </div>
                                                    </div>
                                            </div>
                                        <!---->
                                        
                                        <!---->
                                        <!---->
                                    </div>
                                    <% if(now > item.Concert_Sales_Date) { %>
                                <div _ngcontent-c6="" class="card-buyTicket ng-star-inserted" style="text-align: center">
                                    <a _ngcontent-c6="" >
                                       <span _ngcontent-c6=""><a href="/concert/<%= item.Concert_Name.split(" ").join("-") %>"><button class="btn btn-danger mb-2" style="width: 100%; margin-top: 10px;">BUY NOW</button></a></span>
                                    </a>
                                </div>
                                <% } else { %>
                                <div _ngcontent-c6="" class="card-buyTicket ng-star-inserted" style="text-align: center">
                                        <a _ngcontent-c6="" >
                                           <span _ngcontent-c6=""><a href="/concert/<%= item.Concert_Name.split(" ").join("-") %> "><button class="btn btn-warning mb-2" style="width: 100%; margin-top: 10px;">COMING SOON</button></a></span>
                                        </a>
                                    </div>
                                    <% } %>
                            
                        </div>
                    </div>
    
                    
                </div>
                <% } %>
                    <% }) %>
               </div>

                
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
            </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
            </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
            </script>
         <!---- fontawesome ---->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        <style>
            .card-img-top {
                width: 100%;
                height: 20em;
            }
        </style>


</body>
    
</html>