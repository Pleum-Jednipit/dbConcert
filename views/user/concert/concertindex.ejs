<% include ../../partials/userheader %>
<title>Concert </title>
</head>
<% include ../../partials/usernav %>


<body class="container">
            <!--body part1-->
        <div class="container my-5" >
            <div class="row">
                <div class="col-0" style="width: 25px"></div>
                    <div class="col">
                        <h1 class="dispaly-1" style="float: left">Concert
                        <img src="https://image.flaticon.com/icons/svg/1776/1776689.svg" style="float:right; width: 50px;"></h1>
                        <i class="fas fa-music fa-2x" style="margin-top: 10px; margin-left: 5px;"></i>
                    </div>
                </div>
            <hr>
            <div class="row">
                <% var concertID = []; %>

                <% concert.forEach(function(item){ %>
                    <% if(!concertID.includes(item.Concert_ID)) { %>
                        <% concertID.push(item.Concert_ID); %>
                    <div _ngcontent-c6
                    class="col-12 col-sm-6 col-lg-3 card align-items-center align-items-lg-stretch cardwrapper ng-star-inserted" 
                    style="margin-left: 45px;margin-right: 40px; margin-top: 20px; margin:40px"   > 
                    <div _ngcontent-c6="" class="card-box card-box-by-event">
                     
                        <img _ngcontent-c6 applazyload="" class="card-img-top img-fluid"
                            src="<%= item.Concert_Poster %>" style="margin-top: 10px">
                        <% if(now > item.Concert_Sales_Date) { %>
                        <div _ngcontent-c6="" class="card-buyTicket ng-star-inserted" style="text-align: center">
                            <a _ngcontent-c6="" >
                               <span _ngcontent-c6=""><a href="/concert/<%= item.Concert_Name.split(" ").join("-") %>" class="btn btn-outline-dark" style="width: 250px; margin-top: 10px; background-color: #eeeeee">BUY NOW</a></span>
                            </a>
                        </div>
                        <% } else { %>
                        <div _ngcontent-c6="" class="card-buyTicket ng-star-inserted" style="text-align: center">
                                <a _ngcontent-c6="" >
                                   <span _ngcontent-c6=""><a href="/concert/<%= item.Concert_Name.split(" ").join("-") %> " class="btn btn-outline-dark" style="width: 250px; margin-top: 10px; background-color: #eeeeee">COMING SOON</a></span>
                                </a>
                            </div>
                            <% } %>
                       <div _ngcontent-c6="" class="row cardfooter">
                           <div _ngcontent-c6="" class="col-5 p-1 ng-star-inserted">
                                <div _ngcontent-c6="" class="splitWrapper eventDate is-size-6">
                                    <div _ngcontent-c6="" class="text-dark text-overflow modifileconcertdatecard"><%= item.Concert_ShowDate %>
                                    </div>
                                </div>
                            </div>
                            <!---->
                            <div _ngcontent-c6="" class="col-7 px-1 ng-star-inserted">
                                <div _ngcontent-c6="" class="splitWrapper eventName">
                                    <div _ngcontent-c6="" class="my-1 text-overflow modifileconcertnamecard"><%= item.Concert_Name %>
                                    </div>
                                </div>
                            </div>
                            <!---->
                            <!---->
                        </div>
                    </div>
                </div>
                <% } %>
                <% }) %>

                
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
            </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
            </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
            </script>


</body>

</html>