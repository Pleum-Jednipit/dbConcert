<% include ../../partials/userheader %>
<title>Concert </title>
</head>
<% include ../../partials/usernav %>

    <!--body part1-->
    <div class="container my-5">
        <div class="row">
            <div class="col-1"></div>
            <div class="col">
                <h1 class="dispaly-1"><%= venue.Venue_Name %></h1>
            </div>

        </div>
        <hr>
        
        
    </div>
    <div class="container">
        <div class="row">
                <div class="col text-center">
                        <img src="<%= venue.Venue_Image %>" style="width: 75%;" alt="">
                </div>
        </div>
        <div class="row mt-5">
                <div class="col-1"></div>
                <div class="col">
                    <h1 class="dispaly-1">Detail</h1>
                </div>
            </div>
            <hr>
            <div class="row">
                        
                    <div class="col-9">
                            <form action="/venue" method="GET">
                                    <div class="form-group row mx-5">
                                      <label for="username" class="col-sm-5 col-form-label">Address</label>
                                      <div class="col-sm-5">
                                        <input type="text" readonly class="form-control-plaintext" disabled id="username" value="<%= venue.Venue_Address %>">
                                      </div>
                                    </div>
                                    <div class="form-group row mx-5">
                                      <label for="address" class="col-sm-5 col-form-label">Email</label>
                                      <div class="col-sm-5">
                                            <input type="text" readonly class="form-control-plaintext" disabled id="address" value="<%= venue.Venue_EmailAddress %>">
                                      </div>
                                    </div>
                                    <div class="form-group row mx-5">
                                            <label for="email" class="col-sm-5 col-form-label">Phone</label>
                                            <div class="col-sm-5">
                                                    <input type="text" readonly class="form-control-plaintext" disabled id="email" value="<%= venue.Venue_PhoneNumber %>">
                                              </div>
                                          </div>
                                          <div class="form-group row mx-5">
                                                <label for="phone" class="col-sm-5 col-form-label">Seat Capacity</label>
                                                <div class="col-sm-5">
                                                  <input type="text" readonly class="form-control-plaintext" disabled id="phone" value="<%= venue.Venue_SeatingCapacity %>">
                                                </div>
                                              </div>
                                              <div class="form-group row mx-5">
                                                    <p><%= venue.Venue_Detail %></p>
                                                  </div>
                                          <div class="row mt-auto">
                                                <div class="col-5"></div>
                                                <div class="col-3 text-center">
                                                        <button class="btn btn-primary text-center align-self" type="submit">Back</button>
                                                </div>
                                                 
                                            </div>
                                  </form>
                    </div>
                </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>


</body>

</html>