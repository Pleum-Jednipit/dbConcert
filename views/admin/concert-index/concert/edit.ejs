<% include ../../../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit Concert: <%= concert.Concert_Name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/concert/<%= concert.Concert_Name %>/<%= concert.Concert_ID%>/edit/?_method=PUT" method="POST">
                
                <div class="form-group">
                    <label for="name">Concert ID: <%= concert.Concert_ID %></label>
                    <input type="hidden" name="concertID" value="<%= concert.Concert_ID %>">
                </div>
 
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= concert.Concert_Name %>">
                </div>

                <div class="form-group">
                    <label for="name">Sales Date</label>
                    <input class="form-control" type="date" name="date" id="name" value="<%= concert.Concert_Sales_Date %>">
                </div>

                <div class="form-group">
                    <label for="name">Sales Time</label>
                    <input class="form-control" type="time" name="time" id="name" value="<%= concert.Concert_Sales_Time %>">
                </div>

                <div class="form-group">
                    <label for="name">Concert Detail</label>
                    <input class="form-control" type="text" name="detail" id="name" value="<%= concert.Concert_Detail %>">
                </div>

                <div class="form-group">
                    <label for="name">Concert Poster</label>
                    <input class="form-control" type="text" name="poster" id="name" value="<%= concert.Concert_Poster %>">
                </div>

                <div class="form-group">
                        <label for="name">Venue</label>
                        <select required class="selectpicker" data-style="btn-info" name="venue" id="venue">
                            <optgroup label="Venue Name">
                                <% venue.forEach(function(item){ %>
                                <% if(  currentVenue.Venue_Name  ==  item.Venue_Name ){ %>
                                    <option value="<%= concert.Venue_ID %>" selected> <%= item.Venue_Name %></option>
                                <% } else { %>
                                    <option value="<%= item.Venue_ID %>"> <%= item.Venue_Name %> </option>
                                <% } %>
                                <% }) %>
                            </optgroup>
                        </select>
                    </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
    <% include ../../../partials/footer %>

