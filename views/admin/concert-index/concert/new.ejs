<title>Add Concert</title>
</head>

    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4 mx-5">Add Concert</h1>
            <hr>
            <form action="/admin/concert/new" method="POST">
                <div class="container mt-5">
                    <div class="form-group row mx-4">
                        
                        <label for="concertname" class="col-sm-2 col-form-label">ConcertName</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="name" id="concertname" >
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="date" class="col-sm-2 col-form-label">Sales date</label>
                        <div class="col-sm-5">
                            <input class="form-control" data-date-format="yyyy/mm/dd" id="datepicker" name="date">
                        </div>

                    </div>
                    <div class="form-group row mx-4">
                            <label for="time" class="col-sm-2 col-form-label">Sales Time</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="timepicker" name="time">
                            </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="venue" class="col-sm-2 col-form-label">Venue</label>
                        <div class="col-sm-5">
                            <select name="venueID" class="form-control">
                                    <% venue.forEach(function(item){ %>
                                        <option value="<%= item.Venue_ID %>"> <%= item.Venue_Name %> </option>
                                        <% }) %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group row mx-4">
                            <label for="detail" class="col-sm-2 col-form-label">Concert Detail</label>
                            <div class="col-sm-5">
                                <textarea name="detail" id="detail" class="form-control" cols="30" rows="3"></textarea>
                            </div>
                    </div>
                    <div class="form-group row  mx-4">
                            <label for="image" class="col-sm-2 col-form-label">Poster link</label>
                            <div class="col-sm-5">
                                    <input type="text" name="poster" class="form-control-file" id="image">
                            </div>
                            
                            
                             
                    </div>
                    <div class="form-group row  mt-auto">
                        <div class="col text-center" style="left: 23px">
                                <button class="btn btn-primary text-center align-self" type="submit">Submit</button>
                        </div>
                         
                    </div>
                </div>
        </div>
        </form>
    </div>

    </div>

