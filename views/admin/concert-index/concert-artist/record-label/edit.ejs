<% include ../../../../partials/header %>
<title>Record Label</title>
</head>
<% include ../../../../partials/nav %>
<div class="container">
    <div class="jumbotron">
            <div class="row">
                    <div class="col mx-5">
                        <h1 class="display-4 mx-5">Edit Record Label</h1>
                        <hr>
                        <div class="form-group row mx-4 my-5">
                                <label for="ticketrecieve" class="col-sm-3 ml-5 col-form-label">Search Record Label</label>
                                <div class="col-sm-6">
                        <form action="/admin/record-label/edit" method="POST">
                            <select name="search" id="dropdown" class="form-control selectpicker"
                                data-live-search="true">
                                <% search.forEach(function(item){ %>
                                    <% if (recordLabel && recordLabel.Record_Label_Name == item.Record_Label_Name) {%>
                                    <option value="<%= item.Record_Label_Name %>" selected> <%= item.Record_Label_Name  %> </option>
                                    <% } else { %>
                                <option value="<%= item.Record_Label_Name %>"> <%= item.Record_Label_Name  %> </option>
                                <% } %>
                                <% }) %>
                            </select>
                            </div>
                        <button class="btn btn-success">Search</button>
                        </form>
                    </div>
                    </div>
        
                </div>
        <% if (recordLabel && recordLabel != "none") { %>
        <form action="/admin/record-label/edit?_method=PUT" method="POST">
            <div class="container my-5" id="find">
                <div class="col mx-5">
                    <div class="form-group row mx-4">

                        <input type="hidden" name="recordLabelID" value="<%= recordLabel.Record_Label_ID %>">

                        <label for="concertname" class="col-sm-2 col-form-label">Record Label Name</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="concertname" name="name" value="<%= recordLabel.Record_Label_Name %>">
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="vanue" class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="concertname" name="address" value="<%= recordLabel.Record_Label_Address %>">
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="vanue" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-5">
                            <input type="email" class="form-control" id="concertname" name="email" value="<%= recordLabel.Record_Label_EmailAddress %>">
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="vanue" class="col-sm-2 col-form-label">Phone Number</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="concertname" name="phone" value="<%= recordLabel.Record_Label_PhoneNumber %>">
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="vanue" class="col-sm-2 col-form-label">Website</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="concertname" name="website" value="<%= recordLabel.Record_Label_Website %>">
                        </div>
                    </div>
                    <!--- 3.52AM modify button --->
                    <div class="form-group row  mt-auto">
                        <div class="col-7"></div>
                        <div class="col-3 align-self-end">
                            <button class="btn btn-outline-info text-center align-self mx-3" type="submit">Edit</button>
                            <a href="/admin/record-label/delete/<%= recordLabel.Record_Label_ID %>"
                                 class="btn btn-outline-danger">Delete</a>
                        </div>
                    <!--- /3.52AM --->
                    </div>
                </div>
            </div>
            <% } else if(recordLabel == "none") {%>
            <p> NONE</p>
            <% } %>
    </div>
</div>


<% include ../../../../partials/footer %>