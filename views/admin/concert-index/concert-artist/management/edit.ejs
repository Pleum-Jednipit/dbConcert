        </div>
    
        <% if (concertArtist && concertArtist != "none") { %>
        <form action="/admin/concert-artist/edit?_method=PUT" method="POST">
        <div class="container my-5" id="find">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Concert <b><%= concertName %></b></h2>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Concert Artist ID</th>

                            <th>Artist</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% concertArtist.forEach(function(ca){ %>
                        <tr>
                            <td>
                                    <label for="concertname" class="col-sm-2 col-form-label"><%= ca.Concert_Artist_ID %></label>
                                    <input type="hidden" name="concertArtistID" value="<%= ca.Concert_Artist_ID %>">
                            <td>
                    
                                    <select name="dropdown" id="dropdown" class="form-control selectpicker" data-live-search="true">
                                           <% artist.forEach(function(item){ %>
                                                <% if(  item.Artist_Name  ==  ca.Artist_Name ){ %>
                                                    <option value="<%= item.Artist_ID %>" selected> <%= item.Artist_Name %></option>
                                                <% } else { %>
                                                    <option value="<%= item.Artist_ID %>"> <%= item.Artist_Name %> </option>
                                                <% } %>
                                                <% }) %>
                                    </select>
                            </td>
        
                            <td>
                                <a class="add" title="Add" data-toggle="tooltip" ><i class="material-icons">&#xE03B;</i>
                                    <a class="delete" title="Delete" data-toggle="tooltip" style="margin-left:28px;
                                    margin-top:9px;"><i
                                            class="material-icons">&#xE872;</i></a>
                            </td>
                        </tr>
                       
                    </tbody>
                </table>
                <div class="col-3 align-self-end" style="left: 675px">
                        <button class="btn btn-warning text-center align-self mx-3" type="submit" name="delete" value="<%= ca.Concert_Artist_ID %>">Edit</button>
                    </div>
                    <% }) %>
            </div>
        </div>
        <% } else if(concertArtist == "none") {%>
        <p> NONE</p>
        <% } %>
    </div>
