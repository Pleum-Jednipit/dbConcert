<% include ../../../../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Artist</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/artist/new" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="detail">Detail</label>
                    <input class="form-control" type="text" name="detail" id="detail" placeholder="Detail.">
                </div>
                
                <div class="form-group">
                    <select class="selectpicker" data-style="btn-info" name="recordLabel">
                        <optgroup label="Record Label">
                            <% recordLabel.forEach(function(label){ %>
                            <option value="<%= label.Record_Label_ID %>"><%= label.Record_Label_Name %></option>
                            <% }) %>
                        </optgroup>
                    </select>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin/index">Go Back</a>
        </div>
    </div>
<% include ../../../../partials/footer %>

