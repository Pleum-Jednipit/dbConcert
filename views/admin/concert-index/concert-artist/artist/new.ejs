<% include ../../../../partials/header %>
    <title>Artist</title>
</head>
<% include ../../../../partials/nav %>
<div class="container">
    <div class="jumbotron">
        <h1 class="display-4 mx-5">Add Artist</h1>
        <hr>
        <form action="/admin/artist/new" method="POST">
            <div class="container mt-5">
                <div class="form-group row mx-4">

                    <label for="concertname" class="col-sm-2 col-form-label">Artist Name</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="concertname" name="name">
                    </div>
                </div>
                <div class="form-group row mx-4">
                    <label for="time" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-5">
                        <textarea name="detail" class="form-control" id="" cols="30" rows="5"></textarea>
                    </div>
                </div>
                <div class="form-group row mx-4">
                        <label for="vanue" class="col-sm-2 col-form-label">Record Label</label>
                        <div class="col-sm-5">
                            <select name="recordLabel" class="form-control form-control">
                                    <% recordLabel.forEach(function(item){ %>
                                        <option value="<%= item.Record_Label_ID %>"> <%= item.Record_Label_Name %> </option>
                                        <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row  mx-4">
                            <label for="image" class="col-sm-2 col-form-label">Image link</label>
                            <div class="col-sm-5">
                                    <input type="text" name="image" class="form-control-file" id="image">
                            </div>
                            
                            
                             
                    </div>

                <div class="form-group row  mt-auto">
                    <div class="col-5"></div>
                    <div class="col-3 text-center">
                        <button class="btn btn-success text-center align-self" type="submit">Submit</button>
                    </div>

                </div>
            </div>
    </div>
    </form>
</div>

</div>

<!-- Optional JavaScript -->


<script>
    document.body.className = 'fade';
</script>
<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        document.body.className = '';
    });
</script>
<script src="smoothscoll.js"></script>
<!-- jQuery first, then Popper.js, then Bootstrap JS -->


<script src="js/bootstrap-datetimepicker.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js">
</script>
</body>

</html>