<% include ../../../partials/header %>
    
    <div class="row">
        <h1 style="text-align: center">Concert ShowTime</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/concert-showtime/new" method="POST">
                <div class="form-group">
                    <select class="selectpicker" data-style="btn-info" name="concertID" id="concertID">
                        <optgroup label="Concert Name">
                            <% concert.forEach(function(item){ %>
                            <option value="<%= item.concert_id %>"><%= item.concert_name %></option>
                            <% }) %>
                        </optgroup>
                    </select>
                </div>

                <div>
                    <label for="showDate">Show Date:</label>
                    <input type="date" name="showDate" id="showDate"  required>
                </div>

                <div>
                    <label for="showTime">Show Time:</label>
                    <input type="time" name="showTime" id="showTime"  required>
                </div>

                <div>
                    <label for="seatingPlan">Seating Plan:</label>
                    <input type="text" name="plan" id="plan"  required>
                </div>
                

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
    

<% include ../../../partials/footer %>


