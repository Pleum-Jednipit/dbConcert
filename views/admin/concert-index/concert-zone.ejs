<% include ../../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Zone </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/concert-zone" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="type">Type</label>
                    <input class="form-control" type="text" name="type" id="type" placeholder="Detail.">
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" id="price" placeholder="50" step="1" min="0" required>
                </div>
                
                <div class="form-group">
                    <label for="row">Number of Rows</label>
                    <input class="form-control" type="number" name="row" id="row" placeholder="50" step="1" min="0" required>
                </div>

                <div class="form-group">
                    <label for="column">Number of Columns</label>
                    <input class="form-control" type="number" name="column" id="cloumn" placeholder="50" step="1" min="0" required>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
<% include ../../partials/footer %>

