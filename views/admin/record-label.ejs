<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Record Label</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/record-label" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input class="form-control" type="text" name="address" id="address" placeholder="Detail.">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="text" name="email" id="email" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input class="form-control" type="text" name="phoneNumber" id="phoneNumber" placeholder="Detail.">
                </div>

                <div class="form-group">
                    <label for="Website">Website</label>
                    <input class="form-control" type="text" name="website" id="website" placeholder="Yosemite">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

