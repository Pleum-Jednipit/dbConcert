<% include ../../../partials/header %>
    <title>Ticket Receiving</title>
</head>
<% include ../../../partials/nav %>

    <div class="container">
        <div class="jumbotron">
                <div class="row">
                        <div class="col mx-5">
                            <h1 class="display-4 mx-5">Edit Ticket Receiving Method</h1>
                            <hr>
                            <div class="form-group row mx-4 my-5">
                                    <label for="ticketrecieve" class="col-sm-3 ml-5 col-form-label">Search Ticket Receiving </label>
                                    <div class="col-sm-6">
                            <form action="/admin/ticket-receiving/edit" method="POST">
                                <select name="search" id="dropdown" class="form-control selectpicker"
                                    data-live-search="true">
                                    <% search.forEach(function(item){ %>
                                        <% if (ticket && ticket.Ticket_Receiving_Name == item.Ticket_Receiving_Name) {%>
                                        <option value="<%= item.Ticket_Receiving_Name %>" selected> <%= item.Ticket_Receiving_Name  %> </option>
                                        <% } else { %>
                                    <option value="<%= item.Ticket_Receiving_Name %>"> <%= item.Ticket_Receiving_Name  %> </option>
                                    <% } %>
                                    <% }) %>
                                </select>
                                </div>
                            <button class="btn btn-success">Search</button>
                            </form>
                        </div>
                        </div>
            
                    </div>
            <% if (ticket && ticket != "none") { %>
            <form action="/admin/ticket-receiving/edit?_method=PUT" method="POST">
            <div class="container my-5" id="find">
                <div class="col mx-5">
                    <div class="form-group row mx-4">

                        <input type="hidden" name="ticketID" value="<%= ticket.Ticket_Receiving_ID %>">

                        <label for="concertname" class="col-sm-2 col-form-label">Ticket Recieve Name:</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="concertname" name="name" value="<%= ticket.Ticket_Receiving_Name %>">
                        </div>
                    </div>
                    <div class="form-group row mx-4"> 
                        <label for="time" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-5">
                            <textarea name="detail"  class="form-control" id="" cols="30" rows="5" ><%= ticket.Ticket_Receiving_Detail %></textarea>
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                        <label for="time" class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control" id="time"  maxlength="10" name="price" value="<%= ticket.Ticket_Receiving_Fee%>">
                        </div>
                    </div>
                    <!--- 3.52AM modify edit,delete button --->
                    <div class="form-group row  mt-auto">
                        <div class="col-7"></div>
                        <div class="col-3 align-self-end">
                            <button class="btn btn-outline-info text-center align-self mx-3" type="submit">Edit</button>
                            <a href="/admin/ticket-receiving/delete/<%= ticket.Ticket_Receiving_ID %>" class="btn btn-outline-danger">Delete</a>
                        </div>
                    <!--- /3.52AM --->
                    </div>
                </div>
            </div>
            <% } else if(ticket == "none") {%>
                <p> NONE</p>
            <% } %>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <script>
        document.body.className = 'fade';
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function (e) {
            document.body.className = '';
        });
    </script>
    <script src="smoothscoll.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
</body>

</html>