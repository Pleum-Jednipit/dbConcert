<% include ../../../partials/header %>
    <title>Payment</title>
</head>
<% include ../../../partials/nav %>

    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4 mx-5">Add Payment Method</h1>
            <hr>

            <form action="/admin/payment-method/new" method="POST">
                <div class="container mt-5">
                    <div class="form-group row mx-4">
                        
                        <label for="concertname" class="col-sm-2 col-form-label">Payment Name</label>
                        <div class="col-sm-5">
                            <input type="text" name="name"class="form-control" id="concertname" >
                        </div>
                    </div>
                    <div class="form-group row mx-4">
                            <label for="time" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-5">
                                <textarea name="detail" class="form-control" id="" cols="30" rows="5"></textarea>
                            </div>
                    </div>

                    <div class="form-group row mx-4">
                            <label for="time" class="col-sm-2 col-form-label">Price</label>
                            <div class="col-sm-5">
                                <input type="number" class="form-control" name="price" id="time" placeholder="" maxlength="10" required>
                            </div>
                        </div>

                    <div class="form-group row  mt-auto">
                        <div class="col-5"></div>
                        <div class="col-3 text-center">
                                <button class="btn btn-success text-center align-self" type="submit">Submit</button>
                        </div>
                         
                    </div>
                </div>
        </div>
        </form>
    </div>

    </div>

    <!-- Optional JavaScript -->


    <script>
        document.body.className = 'fade';
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function (e) {
            document.body.className = '';
        });
    </script>
    <script src="smoothscoll.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->


    <script src="js/bootstrap-datetimepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js">
    </script>
</body>

</html>

