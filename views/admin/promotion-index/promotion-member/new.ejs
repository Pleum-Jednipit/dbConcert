<title>Add Promotion Member</title>
</head>
<% include ../../../partials/nav %>

<body>

    <div class="container">
        <div class="jumbotron">
            <div class="row">
                    <div class="col mx-5">
                        <h1 class="display-4 mx-5">Add Promotion Member</h1>
                        <hr>
                        <form action="/admin/promotion-member/new" method="POST">
                        <div class="form-group row mx-4 my-5">
                            <label for="ticketrecieve" class="col-sm-3 ml-5 col-form-label">Search Promotion</label>
                            <div class="col-sm-6">
                                <select name="dropdown" id="dropdown12" class="form-control selectpicker"
                                    data-live-search="true">
                                    <% search.forEach(function(item){ %>
                                    <option value="<%= item.Promotion_Name %>"> <%= item.Promotion_Name %> </option>
                                    <% }) %>
                                </select>
                            </div>
                            <button class="btn btn-success">Search</button>
                            </form>
                        </div>
                    </div>
            </div>
            <% if ( promotion) { %>
            <!---- Table select --->
            <form action="/admin/promotion-member/new/insert" method="POST">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8">
                            <h2>Promotion <b><%= promotion.Promotion_Name %></b></h2>
                            <input type="hidden" name="promotionID" value="<%= promotion.Promotion_ID %>">
                        </div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-info add-new"><i class="fa fa-plus"></i> Add
                                New</button>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>MemberType</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><select class="selectpicker form-control" data-live-search="true" name="mt" id="dropdown123">
                                    <% membertype.forEach(function(item){ %>
                                        <option value="<%= item.MemberType_ID %>"> <%= item.MemberType_Name %> </option>
                                        <% }) %>
                                </select></td>
                            <td class="text-center">
                                <a class="delete" title="Delete" data-toggle="tooltip"><i
                                        class="material-icons">&#xE254;</i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!---- /Table select --->
            <div class="form-group row  mt-auto">
                <div class="col-8"></div>
                <div class="col-3 mx-2 text-center">
                    <button class="btn btn-primary text-center align-self" type="submit">Submit</button>
                </div>

            </div>
        </div>
    </form>
    </div>
    <% } %>
    </div>

    <!-- Optional JavaScript -->
    <script>
        document.body.className = 'fade';
