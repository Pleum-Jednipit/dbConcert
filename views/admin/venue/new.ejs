<div class="container">
    <div class="jumbotron">
        <h1 class="display-4 mx-5">Add Venue</h1>
        <hr>
        <form action="/admin/venue/new" method="POST">
            <div class="container mt-5">
                <div class="form-group row mx-4">

                    <label for="concertname" class="col-sm-2 col-form-label">Vanue Name</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="concertname" name="name">
                    </div>
                </div>
                <div class="form-group row mx-4">
                    <label for="time" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="time" name="address">
                    </div>
                </div>
                <div class="form-group row mx-4">
                    <label for="time" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-5">
                        <input type="email" class="form-control" id="time" name="email">
                    </div>
                </div>
                <div class="form-group row mx-4">
                    <label for="time" class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="time" name="phone" maxlength="10">
                    </div>
                </div>
                <div class="form-group row mx-4">
                    <label for="time" class="col-sm-2 col-form-label">Seat Capacity</label>
                    <div class="col-sm-5">
                        <input type="number" class="form-control" id="time" name="capacity">
                    </div>
                </div>
                <div class="form-group row  mx-4">
                    <label for="image" class="col-sm-2 col-form-label">Poster link</label>
                    <div class="col-sm-5">
                        <input type="text" name="poster" class="form-control-file" id="image">
                    </div>
                </div>
                <div class="form-group row  mt-auto">
                    <div class="col-5"></div>
                    <div class="col-2 text-center" style="padding-left: 35px;">
                        <button class="btn btn-success text-center align-self" type="submit">Submit</button>
                    </div>

                </div>
            </div>
    </div>
    </form>
</div>

</div>

